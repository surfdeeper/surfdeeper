    color: #00ff88;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .coming-soon p {
    color: #00ff88;
    margin-bottom: 1rem;
  }

  .coming-soon ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .coming-soon li {
    color: #00ff88;
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
