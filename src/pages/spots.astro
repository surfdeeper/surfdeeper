---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

import '../styles/spot-guides.css';
import spotGuidesScript from '../scripts/spot-guides.js?url';

const spots = await getCollection('spots');
---

<Layout title="Spots - Surf Deeper" description="Discover surf spots with maps, local insights, tide charts, and hazards contributed by the community.">
  <header class="page-header">
    <h1>Spots</h1>
    <p class="page-subtitle">Discover waves around the world</p>
  </header>

  <section class="spot-map">
    <h2>Map</h2>
    <div id="map"></div>
  </section>

  <section class="spot-features">
    <h2>What You'll Find</h2>
    <div class="features-grid">
      <div class="feature-card">
        <h3>Interactive Maps</h3>
        <p>Detailed maps showing break locations, access points, and parking areas</p>
      </div>
      
      <div class="feature-card">
        <h3>Wave Information</h3>
        <p>Wave type, size, direction, and best conditions for each spot</p>
      </div>
      
      <div class="feature-card">
        <h3>Tide Charts</h3>
        <p>Local tide information and how it affects wave quality</p>
      </div>
      
      <div class="feature-card">
        <h3>‚ö†Ô∏è Hazards & Safety</h3>
        <p>Important safety information, hazards, and local knowledge</p>
      </div>
      
      <div class="feature-card">
        <h3>Local Insights</h3>
        <p>Tips from locals about crowd levels, best times, and etiquette</p>
      </div>
      
      <div class="feature-card">
        <h3>Photos & Videos</h3>
        <p>Visual guides showing the break in different conditions</p>
      </div>
    </div>
  </section>

  <section class="spot-categories">
    <h2>Browse by Region</h2>
    <div class="region-grid">
      <div class="region-card">
        <h3>California</h3>
        <p>From Malibu to Mavericks</p>
        <ul>
          <li><a href="/spots/linda-mar">Linda Mar Beach</a></li>
          <li>Los Angeles County</li>
          <li>Orange County</li>
          <li>San Diego</li>
          <li>Central Coast</li>
          <li>Northern California</li>
        </ul>
      </div>
      
      <div class="region-card">
        <h3>Hawaii</h3>
        <p>The birthplace of surfing</p>
        <ul>
          <li>Oahu</li>
          <li>Maui</li>
          <li>Kauai</li>
          <li>Big Island</li>
        </ul>
      </div>
      
      <div class="region-card">
        <h3>Australia</h3>
        <p>World-class waves down under</p>
        <ul>
          <li>Gold Coast</li>
          <li>Byron Bay</li>
          <li>Bells Beach</li>
          <li>Margaret River</li>
        </ul>
      </div>
      
      <div class="region-card">
        <h3>Europe</h3>
        <p>Cold water perfection</p>
        <ul>
          <li>Portugal</li>
          <li>Spain</li>
          <li>France</li>
          <li>Ireland</li>
        </ul>
      </div>
    </div>
  </section>

  <section class="coming-soon">
    <h2>Coming Soon</h2>
    <p>We're building a comprehensive database of surf spots with detailed information contributed by the community. Each spot page will include:</p>
    <ul>
      <li>üìç Precise location and access information</li>
      <li>üåä Wave characteristics and best conditions</li>
      <li>üåÖ Tide and wind dependencies</li>
      <li>‚ö†Ô∏è Safety considerations and hazards</li>
      <li>üë• Local etiquette and crowd information</li>
      <li>üì∏ Photos and videos from the community</li>
      <li>üí¨ Reviews and tips from surfers</li>
    </ul>
  </section>

  <section class="contribute-cta">
    <h2>Share Your Local Knowledge</h2>
    <p>Know a great surf spot? Help the community by sharing your local knowledge and insights.</p>
    <a href="/contribute" class="cta-button">Add a Spot</a>
  </section>
</Layout>

 

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin="" defer></script>

<script
  type="application/json"
  id="spots-data"
  set:html={JSON.stringify(spots.map((s) => ({
    title: s.data.title,
    description: s.data.description || '',
    latitude: s.data.latitude,
    longitude: s.data.longitude,
    slug: s.slug,
  })))}
></script>
<script src={spotGuidesScript} defer></script>


