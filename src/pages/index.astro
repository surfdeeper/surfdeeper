    border-radius: 8px;
    padding: 1.5rem;
  }

  .pullquote blockquote {
    margin: 0 0 0.75rem 0;
    padding-left: 1rem;
    border-left: 4px solid #00ff88;
  }

  .pullquote p {
    color: #00ff88;
  }

  .pullquote-cta a {
    color: #00ff88;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
</style>
