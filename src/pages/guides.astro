  <section class="surfing-manual">
    <h2>The Surfing Deeper Manual</h2>
    <div class="outline-tree">
      {
        Object.entries(grouped)
          .sort(([a], [b]) => (sections[a]?.order ?? 999) - (sections[b]?.order ?? 999))
          .map(([section, items]) => (
            <div class="outline-section">
              <h3>{sections[section]?.label ?? section}</h3>
              <ul>
