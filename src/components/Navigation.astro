<style>
  /* Logo-specific styles */
  .logo-crop {
    display: block;
    height: auto;
    overflow: visible;
    line-height: 0;
  }

  .image-logo {
    max-height: 200px;
    height: auto;
    width: auto;
    display: block;
    object-fit: contain;
    object-position: center;
  }

  /* Responsive logo sizing */
  @media (max-width: 768px) {
    .image-logo { 
      max-height: 120px; 
    }
  }
</style>