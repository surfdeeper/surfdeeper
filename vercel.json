{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "astro",
  "redirects": [
    { "source": "/spot-guides", "destination": "/spots", "permanent": true },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "surfdeeper.com"
        }
      ],
      "destination": "https://surfdeeper.com/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ]
}
